default: &default
  adapter: mysql2
  encoding: utf8mb4
  pool: <%= ENV.fetch("RAILS_MAX_THREADS") { 5 } %>
  port: 3306
  username: username
  password: password
  host: 127.0.0.1

development:
  <<: *default
  username: username
  password: password
  database: users_development
  host: 127.0.0.1
test:
  <<: *default
  database: users_test
production:
  <<: *default
  database: <%= ENV["USERS_DATABASE_NAME"] %>
  username: <%= ENV["USERS_DATABASE_USER"] %>
  password: <%= ENV["USERS_DATABASE_PASSWORD"] %>
